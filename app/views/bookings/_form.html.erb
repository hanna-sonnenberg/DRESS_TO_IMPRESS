
<div class="container">
  <div class="form-wrapper" style="width: 300px; margin: 0 auto;">
<%= simple_form_for([outfit, booking], local: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<div class="form-inputs">
  <%= f.input :address %>
  <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
  <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: "btn btn-dark mb-3" %>
<% end %>
</div>
</div>
</div>
