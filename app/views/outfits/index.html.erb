<div class="container-fluid">
  <div class="row">
    <div class="col-8">
      <h2 class="text-center"> <%= @category.capitalize %></h2>
      <div class="d-flex flex-wrap">
        <% @outfits.each do |outfit| %>
        <%= link_to outfit_path(outfit) do %>
        <div class="card-trip">
          <% if outfit.photos.attached? %>
          <%= cl_image_tag(outfit.photos[0].key, class: 'card-img-top rounded-top') %>
          <% else %>
          <%= image_tag('banner_image.jpg', class: 'card-img-top rounded-top') %>
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= outfit.name %></h2>
              <p>Short description here!</p>
            </div>
            <h2 class="card-trip-pricing">99.99 EUR</h2>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class="map-container col-4">
      <div class="map-box">
        <div id="map"
        style="width: 100%; height: 100vh;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
