<div class="container">
  <div class="row">

   <div class="rounded image-review">
    <% if @outfit.photos.attached? %>
    <%= cl_image_tag(@outfit.photos[0].key, class: 'card-img-top') %>
    <% else %>
    <%= image_tag('banner_image.jpg', class: 'card-img-top') %>
    <% end %>
  </div>

  <div class="form-body">
    <div class="form-group">
      <%= simple_form_for([@outfit, @review ], local: true) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :content %>
        <%= f.input :rating %>
      </div>
      <div class="form-actions">
        <%= f.submit :submit, class: "btn" %>
      </div>

      <% end %>
    </div>
  </div>

</div>
</div>


